{
  "version": 2,
  "name": "nuxt-now",
  "github": {
    "autoAlias": false
  },
  "alias": "nuxt-now-staging",
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/now-builder",
      "config": {
        "serverFiles": [
          "./server/**/*",
          "./constants.js"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/_nuxt/.+",
      "headers": {
        "cache-control": "s-maxage=31536000"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "staging",
      "API_URL": "http://staging-api.mywebsite.com",
      "BASIC_AUTH": "disabled"
    }
  },
  "env": {
    "NODE_ENV": "staging",
    "API_URL": "http://staging-api.mywebsite.com",
    "BASIC_AUTH": "disabled"
  }
}
